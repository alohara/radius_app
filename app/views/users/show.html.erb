<% provide :title, @user.radius_name %>
<div class="container-fluid">
  <div class="row-fluid row">
    <div class="span3">
      <div class="well sidebar-nav-fixed">
        <ul class="nav nav-list">
          <li class="nav-header"></li>
            <h3>
              <%= @user.radius_name %>
            </h3>
            <h6>
              <%= link_to "Radius Profile", edit_user_path(current_user) %>
        		Potentially make a partial out of the edit fields and render them here.
	        </h6>
		</ul>
      </div>
    </div>
    <div class="span9 span-fixed-sidebar">
      <div class="hero-unit">
    	<h4>This is the User/Show view </h4>
      <div class="row-fluid">
        <div class="span9">
          <% if @user.radiusposts.any? %>
     	    <h3>Posts (<%= @user.radiusposts.count %>)</h3>
	       	<ol class="radiusposts">
		      <%= render @radiusposts %>
		    </ol>
		  <%= will_paginate @radiusposts %>
	    <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
