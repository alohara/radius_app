  <header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <%= link_to "Radius", root_path, id: "logo" %>
	  <div class="nav-collapse">
        <ul class="nav pull-right" >
		<% if signed_in? %>
		  <li><%= link_to "Community", '#' %></li>
		  <li class="dropdown">
		    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b>
			</a>
			<ul class="dropdown-menu">
			  <li><%= link_to "Radius Profile", current_user, id: "menu" %></li>
			  <li><%= link_to "iSpy", '#', id: "menu" %></li>
			  <li class="divider"></li>
			  <li>
			    <%= link_to "Sign out", signout_path, method: "delete" %>
			  </li>
			</ul>
		  </li>
		<% else %>
          <form class="form-inline" role="form">
            <div class="form-group">
              <%= form_for(:session, url: sessions_path) do |f| %>
	            <%= f.text_field :radius_name, placeholder: "Radius Name" %>
                <%= f.password_field :password, placeholder: "Password" %>
			    <%= f.submit "Sign In", class: "btn btn-small btn-primary", id: "logo" %>
			  <% end %>
              <b><%= link_to "Sign Up", signup_path, id: "menu" %></b>
		    </div>
		  </form>
		<% end %>
        </ul>
	  </div>
	  </div>
    </div>
  </header>
