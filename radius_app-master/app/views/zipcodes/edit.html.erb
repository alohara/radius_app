<% provide(:title, 'Edit Zipcodes') %>
<div class="page-header" id:"banner">
 <div class="row">
   <div class="span4">
     <div class="col-xs-6 col-sm-6 col-md-4">
      <h5> Sidebar </h5>
     </div>
   </div>
  <div class="span8">
  <div class="col-xs-12 col-sm-6 col-md-8">
<h1>Update Zipcodes</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@zipcode) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :zipcode %>
	  <%= f.text_field :zipcode %>
	  
	  <%= f.label :description %>
	  <%= f.text_field :description %>

	  <%= f.label :city %>
	  <%= f.text_field :city %>

	  <%= f.label :subcity %>
	  <%= f.text_field :subcity %>
	  
      <label class="checkbox"> <input type="checkbox"> 
	    <%= f.check_box :active %>
	    <%= f.label :active %>
	  </label>
		  
	  <%= f.submit "Update Zipcode", class: "btn btn-medium btn-primary" %>
	<% end %>
  </div>
 </div>