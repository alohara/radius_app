<% provide(:title, 'Admin Stats') %>
<div class="page-header" id:"banner">
 <div class="row">
   <aside class="span4">
     <div class="col-xs-6 col-sm-6 col-md-4">
       <section>
		<h3>Placeholder for something</h3>
	   </section>
     </div>
    </aside>
  <div class="span8">
  <div class="col-xs-12 col-sm-6 col-md-8">
      <table class="table table-condensed">
        <thead>
		  <tr>
		    <th>Posts per Zipcode/User</th>
		  </tr>
		</thead>
		<tbody>
		<tr>
		  <td>
		    <% @zips.each do |zip| %>
			  <% @zipcity = Zipcode.select(:subcity).where("zipcode = ?", zip) %>
              <% @people.each do |peeps| %>
		    <ul>
			  <% @stats = Radiuspost.where("zipcode = ? and radius_name = ?", zip, peeps).count %>
			  <% if @stats > 0 %>
                <b><%= zip %></b>
			    <% @zipcity.each do |city| %>
                  <b><%= city.subcity %></b>
				<% end %>
  			    <i><%= peeps %></i>
			    <%= @stats %>
			<% end %>
			</ul>
			<% end %>
			<% end %>
		  </td>
		</tr>
		</tbody>
      </table>
   </div>
  </div>
 </div>
</div>